
<div>
	<h4>{{Title}}</h4>
	<!-- Trigger the modal with a button on the poster-->

  <button class="deleteBtn" title="{{title}}" image="{{poster}}">x</button>
  <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal"><img src="{{poster}}"></button>
    <button class="add" title="{{Title}}" image="{{poster}}">Add</button>


</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{this.Details.Title}}</h4>
      </div>
      <div class="modal-body">
        <p>{{this.Details.Actors}}</p>
        <p>{{this.Details.Year}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
